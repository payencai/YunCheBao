<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:background="#fefefe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!--广告栏banner-->
        <com.youth.banner.Banner
            android:id="@+id/banner"
            android:layout_width="fill_parent"
            android:layout_height="210dp"
            android:visibility="visible" />
        <android.support.v7.widget.CardView
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            app:cardCornerRadius="1dp"
            app:cardElevation="1dp" >

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal">

                <LinearLayout
                    android:background="@drawable/bg_baike"
                    android:id="@+id/menuLay1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@mipmap/baike_menu_1" />

                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="装饰百科"
                        android:textColor="@color/gray_99"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:background="@drawable/bg_baike"
                    android:id="@+id/menuLay2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@mipmap/baike_menu_2" />

                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="养护百科"
                        android:textColor="@color/gray_99"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:background="@drawable/bg_baike"
                    android:id="@+id/menuLay3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@mipmap/baike_menu_3" />

                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="购车指南"
                        android:textColor="@color/gray_99"
                        android:textSize="14sp" />
                </LinearLayout>
                <LinearLayout
                    android:background="@drawable/bg_baike"
                    android:id="@+id/menuLay4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@mipmap/ic_jiaotong" />

                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="交通百科"
                        android:textColor="@color/gray_99"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/tv_type"
            android:layout_marginBottom="10dp"
            android:textColor="@color/black_33"
            android:textSize="24dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:text="装饰百科"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

        </TextView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.tool.view.HorizontalListView

                android:layout_toLeftOf="@id/iv_add"
                android:layout_marginLeft="10dp"
                android:id="@+id/lv_type"
                android:layout_width="match_parent"
                android:layout_height="50dp">

            </com.tool.view.HorizontalListView>
            <ImageView
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/iv_add"
                android:layout_alignParentRight="true"
                android:src="@mipmap/add"
                android:layout_width="15dp"
                android:layout_height="15dp" />
        </RelativeLayout>


    </LinearLayout>
</LinearLayout>