<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.system.SearchActivity">
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/back"
            android:layout_width="50dp"
            android:layout_height="48dp"
            android:padding="15dp"
            android:src="@mipmap/back"
         />
        <RelativeLayout
            android:id="@+id/search_lay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_toLeftOf="@id/tv_search"
            android:layout_toRightOf="@id/back"
            android:background="@drawable/gray_circle_background">

            <EditText
                android:id="@+id/et_word"
                android:textColorHint="#ccc"
                android:background="@null"
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:drawableLeft="@mipmap/search__small_icon"
                android:drawablePadding="5dp"
                android:hint="搜索您想要的"
                android:textColor="@color/gray_99"
                android:textSize="12sp" />
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_search"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:text="搜索"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <TextView
        android:layout_margin="15dp"
        android:text="最近搜索"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <com.nex3z.flowlayout.FlowLayout
        android:id="@+id/fl_rent"
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.nex3z.flowlayout.FlowLayout>
</LinearLayout>
