<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_ee"
    android:orientation="vertical">

    <include layout="@layout/top_title_layout"></include>

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/ll_bottom">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.tool.slideshowview.SlideShowView
                    android:id="@+id/slideshowView"
                    android:layout_width="fill_parent"
                    android:layout_height="180dp"
                    android:visibility="visible" />

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@color/white"
                        android:padding="10dp"
                        android:text="【自驾游召集】汉中市金沙滩百亩向日葵"
                        android:textColor="@color/black_33"
                        android:textSize="14sp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:background="@color/white">

                        <TextView
                            android:id="@+id/createtime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="刚刚"
                            android:textColor="@color/gray_99"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/readNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:drawableLeft="@mipmap/eyes_icon"
                            android:drawablePadding="2dp"
                            android:text="0"
                            android:textColor="@color/gray_99"
                            android:textSize="10sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:layout_toLeftOf="@id/readNum"
                            android:drawableLeft="@mipmap/eyes_icon"
                            android:drawablePadding="2dp"
                            android:text="0"
                            android:textColor="@color/gray_99"
                            android:textSize="10sp"
                            android:visibility="gone" />
                    </RelativeLayout>

                </LinearLayout>
                <!--top end-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="10dp">

                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/head"
                        android:layout_width="46dp"
                        android:layout_height="46dp"
                        android:layout_marginLeft="5dp"
                        app:placeholderImage="@mipmap/icon"
                        app:placeholderImageScaleType="fitXY" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="帝豪四川车友会"
                            android:textColor="@color/black_33"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="这是一个由民间神秘事物探索组织发起人，为广大朋友建立一个公平、有爱、和谐沟通的平台。"
                            android:textColor="@color/gray_99"
                            android:textSize="10sp"
                            android:visibility="gone" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:padding="6dp"
                                android:text="+ 关注"
                                android:textColor="@color/yellow_65"
                                android:textSize="14sp"
                                android:visibility="gone" />

                            <View
                                android:layout_width="1dp"
                                android:layout_height="14dp"
                                android:background="@color/black_0d"
                                android:visibility="gone"></View>

                            <TextView

                                android:id="@+id/contacts"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="联系Ta"
                                android:textColor="@color/yellow_65"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <!-- middle end-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <com.bbcircle.view.NoScrollWebView
                        android:id="@+id/webView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </com.bbcircle.view.NoScrollWebView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="15dp"
                        android:text="行程安排：
第一天：北京---吉林省四平市（8月18日）
行程：全程860公里，全程高速。早上8点出发，预计用时10小时，下午6点到达：晚上住在四平市区内。
活动：无。
第二天：四平市---沅江市兴和鲜族自治乡（8月19日）
第二天：四平市---沅江市兴和鲜族自治乡（8月19日"
                        android:textColor="@color/black_33"
                        android:textSize="14sp"
                        android:visibility="gone" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="50dp"
                        android:background="#4df3ca65"
                        android:padding="10dp"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="7311"
                            android:textColor="@color/yellow_65"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:drawablePadding="6dp"
                            android:drawableRight="@mipmap/yellow_arrow_small"
                            android:text="展开更多详情"
                            android:textColor="@color/yellow_65"
                            android:textSize="14sp" />
                    </RelativeLayout>
                </LinearLayout>


            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:id="@+id/ll_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:background="@drawable/top_line_bg"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/commentLay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:hint="发表回帖……"
                android:orientation="vertical"
                android:padding="16dp"
                android:textColorHint="@color/yellow_65"
                android:textSize="14sp"></TextView>

            <LinearLayout
                android:id="@+id/ll_heart"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/tv_heart"
                    android:layout_width="19dp"
                    android:layout_height="18dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/collect_gray_hole" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/shareBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="16dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="19dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/replay_icon" />
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

</LinearLayout>