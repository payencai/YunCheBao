<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.vipcenter.FindPwdActivity">
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/back"
            android:padding="15dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/back"
            android:layout_width="50dp"
            android:layout_height="50dp" />
        <TextView
            android:textSize="18sp"
            android:id="@+id/title"
            android:textColor="@color/black_33"
            android:layout_centerInParent="true"
            android:text="找回登录密码"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:background="#F9F9F9"
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_phone"
                android:textSize="12sp"
                android:textColor="@color/black_33"
                android:text="当前手机号：176****7788"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="5dp"
                android:textSize="12sp"
                android:textColor="@color/black_33"
                android:text="请输入短信验证码重设密码"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:background="#f9f9f9"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:background="@color/white"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="55dp">
            <TextView
                android:id="@+id/tv_code"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:textSize="16sp"
                android:textColor="@color/black_33"
                android:text="验证码    "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/et_code"
                android:inputType="numberDecimal"
                android:layout_toLeftOf="@id/tv_send"
                android:layout_toRightOf="@id/tv_code"
                android:background="@color/white"
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"
                android:textSize="16sp"
                android:textColorHint="#ccc"
                android:textColor="@color/black_33"
                android:hint="请输入验证码"
                android:layout_width="match_parent"
                android:layout_height="30dp" />
            <TextView
                android:id="@+id/tv_send"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:textSize="16sp"
                android:textColor="@color/black_33"
                android:text="发送验证码"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <View
            android:background="#f3f3f3"
            android:layout_width="match_parent"
            android:layout_height="1dp"></View>
        <RelativeLayout
            android:background="@color/white"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="55dp">
            <TextView
                android:id="@+id/tv_pwd"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:textSize="16sp"
                android:textColor="@color/black_33"
                android:text="设置密码"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/et_pwd"
                android:inputType="numberDecimal"
                android:layout_toRightOf="@id/tv_pwd"
                android:background="@color/white"
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"
                android:textSize="16sp"
                android:textColorHint="#ccc"
                android:textColor="@color/black_33"
                android:hint="请输入密码"
                android:layout_width="match_parent"
                android:layout_height="30dp" />

        </RelativeLayout>
        <View
            android:background="#f3f3f3"
            android:layout_width="match_parent"
            android:layout_height="1dp"></View>
        <TextView
            android:padding="15dp"
            android:textSize="12sp"
            android:text="密码区分大小写，建议使用6位数以上数字、字母组合"
            android:textColor="@color/gray_99"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:background="#F3CA65"
            android:gravity="center"
            android:id="@+id/tv_submit"
            android:layout_margin="15dp"
            android:layout_centerVertical="true"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:text="确认并重新登陆"
            android:layout_width="match_parent"
            android:layout_height="45dp" />
    </LinearLayout>
</LinearLayout>
