<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="150dp">
    <RelativeLayout
        android:paddingLeft="15dp"
        android:gravity="center_vertical"
        android:layout_above="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:src="@mipmap/pic2"
            android:id="@+id/img"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:scaleType="fitXY"
         />
        <LinearLayout
            android:layout_toRightOf="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/icon"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@mipmap/renzhen_icon"/>
                <TextView
                    android:id="@+id/item1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black_33"
                    android:textSize="14sp"
                    android:layout_marginLeft="6dp"
                    android:text="昆山汽车修理厂"/>
            </LinearLayout>
            <TextView
                android:id="@+id/item2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:textSize="10sp"
                android:text="评价5.00 | 订单3"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/item3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:textSize="10sp"
                    android:text="免费检测"/>
                <TextView
                    android:layout_marginLeft="10dp"
                    android:id="@+id/item4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:textSize="10sp"
                    android:text="营业时间"/>
                <TextView
                    android:layout_marginLeft="5dp"
                    android:id="@+id/item5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:textSize="10sp"
                    android:text="8:00-18:30"/>
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
    <View
        android:id="@+id/view"
        android:layout_above="@+id/rl_bottom"
        android:background="@color/yellow_64"
        android:layout_width="match_parent"
        android:layout_height="1dp"></View>
    <RelativeLayout
        android:paddingLeft="15dp"
        android:id="@+id/rl_bottom"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:id="@+id/address"
            android:layout_centerVertical="true"
            android:text="广东省广州市信息枢纽"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/dis"
            android:textSize="12sp"
            android:textColor="@color/green_67"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="14.5km"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</RelativeLayout>