<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.xihubao.WashPayActivity">
    <RelativeLayout
        android:id="@+id/top"
        android:background="#47443E"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:padding="15dp"
            android:src="@mipmap/white_back" />
        <TextView
            android:textSize="16sp"
            android:textColor="@color/white"
            android:text="支付"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <LinearLayout
        android:layout_above="@+id/tv_pay"
        android:layout_below="@+id/top"
        android:background="#47443E"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.tool.slideshowview.SlideShowView
            android:id="@+id/slideshowView"

            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:visibility="visible" />
        <LinearLayout
         android:paddingBottom="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/btn_unselected"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />
                <TextView
                    android:textColor="@color/white"
                    android:layout_marginLeft="10dp"
                    android:text="会员卡支付"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/btn_unselected"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />
                <TextView
                    android:textColor="@color/white"
                    android:layout_marginLeft="10dp"
                    android:text="微信支付"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/btn_selected"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />
                <TextView
                    android:textColor="@color/white"
                    android:layout_marginLeft="10dp"
                    android:text="支付宝支付"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="35dp">
                <TextView
                    android:textColor="@color/black_33"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    android:text="服务商家"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_shop"
                    android:layout_marginRight="15dp"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/black_33"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    android:text="洗车店"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="35dp">
                <TextView
                    android:textColor="@color/black_33"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    android:text="服务项目"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_catagory"
                    android:layout_marginRight="15dp"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/black_33"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    android:text="普通洗车"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="35dp">
                <TextView
                    android:textColor="@color/black_33"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    android:text="订单金额"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/price1"
                    android:layout_marginRight="15dp"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/black_33"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    android:text="￥32"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <TextView
                    android:textColor="@color/black_33"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    android:text="实际付款"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/price2"
                    android:layout_marginRight="15dp"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/red_4e"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    android:text="￥32"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:textSize="@dimen/sp_16"
        android:layout_margin="10dp"
        android:id="@+id/tv_pay"
        android:background="@color/green_1e"
        android:textColor="@color/white"
        android:gravity="center"
        android:text="确认支付"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="45dp" />
</RelativeLayout>
