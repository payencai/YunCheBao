<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:orientation="horizontal">
        <!--搜索栏-->

        <LinearLayout
            android:id="@+id/leftIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back"
                android:layout_width="32dp"
                android:layout_height="48dp"
                android:padding="10dp"
                android:src="@mipmap/back"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/user_center_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:src="@mipmap/people_icon" />
        </LinearLayout>


        <ImageView
            android:id="@+id/messenger_icon"
            android:layout_width="41dp"
            android:layout_height="42dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:padding="12dp"
            android:src="@mipmap/add" />

        <RelativeLayout
            android:id="@+id/search_lay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_toLeftOf="@id/messenger_icon"
            android:layout_toRightOf="@id/leftIcon"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawableLeft="@mipmap/search__small_icon"
                android:drawablePadding="10dp"
                android:text="搜索您想要的"
                android:textColor="@color/gray_99"
                android:textSize="12sp" />
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:background="#eee"
        android:layout_width="match_parent"
        android:layout_height="1dp"></View>


        <LinearLayout
            android:id="@+id/ll_item1"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <ImageView
                android:scaleType="fitXY"
                android:src="@mipmap/ic_contacts"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <TextView
                android:textSize="16sp"
                android:layout_marginLeft="15dp"
                android:textColor="@color/black_33"
                android:text="通讯录"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_item2"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <ImageView

                android:scaleType="fitXY"
                android:src="@mipmap/ic_addfriend"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <TextView
                android:textSize="16sp"
                android:layout_marginLeft="15dp"
                android:textColor="@color/black_33"
                android:text="新加好友"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:background="@color/white"
            android:gravity="center_vertical"
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <ImageView
                android:scaleType="fitXY"
                android:src="@mipmap/ic_friendcircle"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <TextView
                android:textSize="16sp"
                android:layout_marginLeft="15dp"
                android:textColor="@color/black_33"
                android:text="好友圈"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_item3"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <ImageView
                android:scaleType="fitXY"
                android:src="@mipmap/ic_group"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <TextView
                android:textSize="16sp"
                android:layout_marginLeft="15dp"
                android:textColor="@color/black_33"
                android:text="群聊"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:background="@color/white"
            android:gravity="center_vertical"
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <ImageView
                android:scaleType="fitXY"
                android:src="@mipmap/ic_tags"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <TextView
                android:textSize="16sp"
                android:layout_marginLeft="15dp"
                android:textColor="@color/black_33"
                android:text="标签"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:background="@color/white"
            android:gravity="center_vertical"
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <ImageView
                android:scaleType="fitXY"
                android:src="@mipmap/ic_star"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <TextView
                android:textSize="16sp"
                android:layout_marginLeft="15dp"
                android:textColor="@color/black_33"
                android:text="星标好友"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_self"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <ImageView
                android:scaleType="fitXY"
                android:src="@mipmap/ic_self"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <TextView
                android:textSize="16sp"
                android:layout_marginLeft="15dp"
                android:textColor="@color/black_33"
                android:text="自驾游"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_carfriend"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <ImageView
                android:scaleType="fitXY"
                android:src="@mipmap/ic_car"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <TextView
                android:textSize="16sp"
                android:layout_marginLeft="15dp"
                android:textColor="@color/black_33"
                android:text="车友汇"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/rl_stranger"
            android:background="@color/white"

            android:layout_width="match_parent"
            android:layout_height="40dp">
            <ImageView
                android:id="@+id/msg"
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/msg"
                android:layout_width="20dp"
                android:layout_height="20dp" />
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/msg"
                android:textColor="@color/black_33"
                android:layout_centerInParent="true"
                android:textSize="14sp"
                android:text="陌生人消息"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:background="@color/yellow_31"
                android:textColor="@color/white"
                android:text="0"
                android:textSize="10sp"
                android:gravity="center"
                android:layout_toLeftOf="@+id/enter"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:layout_width="23dp"
                android:layout_height="15dp" />
            <ImageView
                android:src="@mipmap/arrow_right"
                android:id="@+id/enter"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="8dp"
                android:layout_height="15dp" />
        </RelativeLayout>
</LinearLayout>