<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/gray_ee"
    android:orientation="vertical">

    <include layout="@layout/top_title_layout"></include>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.tool.listview.PersonalScrollView
            android:layout_above="@+id/ll_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.tool.slideshowview.SlideShowView
                    android:id="@+id/slideshowView"
                    android:layout_width="fill_parent"
                    android:layout_height="250dp"
                    android:visibility="visible" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginRight="5dp"
                        android:background="@color/white"
                        android:padding="10dp"
                        android:text="【自驾游召集】汉中市金沙滩百亩向日葵"
                        android:textColor="@color/black_33"
                        android:textSize="14sp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="10dp"
                        android:background="@color/white">

                        <TextView
                            android:id="@+id/createtime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="刚刚"
                            android:textColor="@color/gray_99"
                            android:textSize="10sp" />

                        <TextView

                            android:id="@+id/readNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:drawableLeft="@mipmap/eyes_icon"
                            android:drawablePadding="2dp"
                            android:text="0"
                            android:textColor="@color/gray_99"
                            android:textSize="10sp" />

                        <TextView
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:layout_toLeftOf="@+id/readNum"
                            android:drawableLeft="@mipmap/eyes_icon"
                            android:drawablePadding="2dp"
                            android:text="0"
                            android:textColor="@color/gray_99"
                            android:textSize="10sp" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/sedtime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/top_line_bg"
                        android:drawableLeft="@mipmap/time_small"
                        android:drawablePadding="10dp"
                        android:padding="15dp"
                        android:text="11-30 16:41 至 12-01 15：41"
                        android:textColor="@color/black_33"
                        android:textSize="14sp" />

                    <TextView
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/top_line_bg"
                        android:drawableLeft="@mipmap/localize_small"
                        android:drawablePadding="10dp"
                        android:paddingBottom="15dp"
                        android:paddingTop="15dp"
                        android:text="线上活动"
                        android:textColor="@color/black_33"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/aleady"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/top_line_bg"
                        android:drawableLeft="@mipmap/man_add_small"
                        android:drawablePadding="10dp"
                        android:paddingBottom="15dp"
                        android:paddingTop="15dp"
                        android:text="已报名0人"
                        android:textColor="@color/black_33"
                        android:textSize="14sp" />
                </LinearLayout>
                <!--top end-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp">

                    <com.facebook.drawee.view.SimpleDraweeView
                        android:layout_width="46dp"
                        android:id="@+id/head"
                        android:layout_height="46dp"
                        android:layout_marginLeft="5dp"
                        app:placeholderImage="@mipmap/icon"
                        app:placeholderImageScaleType="fitXY" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="自驾游召集地"
                            android:textColor="@color/black_33"
                            android:textSize="14sp" />

                        <TextView
                            android:visibility="gone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="这是一个由民间神秘事物探索组织发起人，为广大朋友建立一个公平、有爱、和谐沟通的平台。"
                            android:textColor="@color/gray_99"
                            android:textSize="10sp" />

                        <LinearLayout
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/tv_focus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="+ 关注"
                                android:textColor="@color/yellow_65"
                                android:textSize="14sp" />

                            <View
                                android:layout_marginLeft="10dp"
                                android:layout_width="1dp"
                                android:layout_height="14dp"
                                android:background="@color/black_0d"></View>

                            <TextView

                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="10dp"
                                android:id="@+id/tv_contact"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="联系Ta"
                                android:textColor="@color/yellow_65"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <!-- middle end-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"

                    android:orientation="vertical">
                    <com.bbcircle.view.NoScrollWebView
                        android:id="@+id/webView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </com.bbcircle.view.NoScrollWebView>
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_comment"
                        tools:itemCount="2"
                        tools:listitem="@layout/item_circle_comment"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </android.support.v7.widget.RecyclerView>

                </LinearLayout>


            </LinearLayout>
        </com.tool.listview.PersonalScrollView>

        <LinearLayout
            android:id="@+id/ll_bottom"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@drawable/top_line_bg"
            android:orientation="vertical">
            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/rl_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_gravity="bottom"
                android:padding="10dp"
                android:background="@drawable/top_line_bg"
                android:orientation="horizontal">

                <EditText
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:textColor="@color/black_33"
                    android:layout_marginRight="15dp"
                    android:layout_toLeftOf="@id/tv_pub"
                    android:layout_marginLeft="10dp"
                    android:paddingLeft="15dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:layout_centerVertical="true"
                    android:id="@+id/et_comment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/comment_shape"
                    android:hint="写下你的评论..."
                    android:orientation="vertical"
                    android:textColorHint="#ccc"
                    android:textSize="14sp"></EditText>
                <TextView
                    android:textSize="14sp"
                    android:layout_marginRight="10dp"
                    android:id="@+id/tv_pub"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/black_33"
                    android:text="发布"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/ll_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/comment"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="7dp">

                    <ImageView
                        android:layout_width="19dp"
                        android:layout_height="19dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/contact_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:gravity="center_horizontal"
                        android:text="评论"
                        android:textColor="@color/gray_99"
                        android:textSize="10sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_heart"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="7dp">

                    <ImageView
                        android:id="@+id/tv_heart"
                        android:layout_width="19dp"
                        android:layout_height="19dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/collect_gray_hole" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:gravity="center_horizontal"
                        android:text="收藏"
                        android:textColor="@color/gray_99"
                        android:textSize="10sp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/submitBtn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/yellow_65"
                    android:gravity="center"
                    android:text="我要报名"
                    android:textColor="@color/white"
                    android:textSize="14sp" />
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

</LinearLayout>