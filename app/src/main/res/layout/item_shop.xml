<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="10dp"
    android:orientation="vertical">
    <RelativeLayout
        android:paddingRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/ll_head"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_name"
                    android:textColor="@color/black_33"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="云南隆创尚通" />

                <TextView
                    android:id="@+id/tv_grade"
                    android:textSize="10sp"
                    android:textColor="@color/white"
                    android:layout_marginLeft="10dp"
                    android:background="@mipmap/grades"
                    android:gravity="center"
                    android:layout_width="15dp"
                    android:layout_height="17dp"
                    android:text="1" />
                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <com.iarcuschin.simpleratingbar.SimpleRatingBar
                        android:layout_width="70dp"
                        android:id="@+id/sb_score"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tv_score"
                        android:layout_marginLeft="10dp"
                        android:textSize="12sp"
                        android:textColor="@color/gray_99"
                        android:text="5.0分"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:gravity="center_horizontal"
            android:id="@+id/ll_head"
            android:layout_alignParentRight="true"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@mipmap/shophead"
                android:layout_width="25dp"
                android:layout_height="25dp" />
            <TextView
                android:layout_marginTop="5dp"
                android:textSize="12sp"
                android:textColor="@color/gray_99"
                android:text="店主信息"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout

        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:orientation="vertical"
            android:padding="10dp">
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@mipmap/location_gray_icon"
                    android:layout_width="10dp"
                    android:layout_height="10dp" />
                <TextView
                    android:layout_marginLeft="5dp"
                    android:id="@+id/tv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="永平路136号"
                    android:textColor="@color/gray_99"
                    android:textSize="12sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:scaleType="centerCrop"
                    android:src="@mipmap/time_gray_icon"
                    android:layout_width="10dp"
                    android:layout_height="10dp" />
                <TextView
                    android:layout_marginLeft="5dp"
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="营业时间：8:00-18:30"
                    android:textColor="@color/gray_99"
                    android:textSize="12sp" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_map"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="导航"
                android:textColor="@color/gray_99"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_dis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1108.38km"
                android:textColor="@color/yellow_77" />
        </LinearLayout>

    </LinearLayout>
    <View
        android:alpha="0.3"
        android:layout_marginTop="10dp"
        android:background="#ccc"
        android:layout_width="match_parent"
        android:layout_height="1dp"></View>
    <LinearLayout

        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView

            android:id="@+id/tv_sale"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="@color/black_33"
            android:layout_marginLeft="15dp"
            android:text="在售车型"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/tv_comment"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="@color/black_33"
            android:layout_marginLeft="15dp"
            android:text="查看评论"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <TextView
            android:visibility="gone"
            android:id="@+id/tv_service"
            android:textSize="10sp"
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="@color/black_33"
            android:layout_marginLeft="15dp"
            android:text="商家客服"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>
</LinearLayout>