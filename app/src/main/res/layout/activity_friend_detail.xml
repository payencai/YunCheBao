<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".rongcloud.activity.StrangerDelActivity">
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/back"
            android:padding="15dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/back"
            android:layout_width="50dp"
            android:layout_height="50dp" />
        <TextView
            android:textSize="18sp"
            android:textColor="@color/black_33"
            android:text="好友详情"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:id="@+id/rl_add"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"
            android:layout_width="40dp"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv_menu"

                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@mipmap/blackview"
                android:layout_width="40dp"
                android:layout_height="5dp" />
        </RelativeLayout>
    </RelativeLayout>
    <View
        android:background="#e2e2e2"
        android:layout_width="match_parent"
        android:layout_height="1dp"></View>

    <com.cheyibao.model.ReboundScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout

            android:padding="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v7.widget.CardView
                android:layout_marginTop="20dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp">
                        <ImageView

                            android:scaleType="fitXY"
                            android:id="@+id/iv_icon"
                            android:layout_marginLeft="15dp"
                            android:src="@mipmap/login_img_icon"
                            android:layout_centerVertical="true"
                            android:layout_width="40dp"
                            android:layout_height="40dp" />
                        <LinearLayout

                            android:layout_toRightOf="@+id/iv_icon"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_marginTop="10dp"
                                android:id="@+id/chatname"
                                android:textSize="@dimen/text_size_16"
                                android:textColor="@color/black_33"
                                android:text="哈哈哈 "
                                android:layout_marginLeft="15dp"
                                android:layout_centerVertical="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:layout_marginTop="5dp"
                                android:id="@+id/nickname"
                                android:textSize="@dimen/text_size_14"
                                android:textColor="@color/gray_66"
                                android:text=""
                                android:layout_marginLeft="15dp"
                                android:layout_centerVertical="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                        <RelativeLayout
                            android:id="@+id/rl_nick"
                            android:layout_marginRight="20dp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:layout_width="30dp"
                            android:layout_height="30dp">
                            <ImageView
                                android:layout_centerInParent="true"
                                android:src="@mipmap/pen"
                                android:layout_width="7dp"
                                android:layout_height="10dp" />
                        </RelativeLayout>
                    </RelativeLayout>
                    <View
                        android:alpha="0.5"
                        android:background="#e2e2e2"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"></View>
                    <RelativeLayout
                        android:id="@+id/rl_tag"
                        android:layout_margin="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="30dp">
                        <TextView
                            android:textStyle="bold"
                            android:textSize="@dimen/text_size_16"
                            android:textColor="@color/black_33"
                            android:text="标签 "
                            android:layout_marginLeft="5dp"
                            android:layout_centerVertical="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView

                            android:id="@id/tv_tag"
                            android:layout_marginRight="20dp"
                            android:layout_toLeftOf="@id/iv_tag"
                            android:textStyle="bold"
                            android:textSize="@dimen/text_size_14"
                            android:textColor="@color/gray_66"
                            android:text=" "
                            android:layout_marginLeft="5dp"
                            android:layout_centerVertical="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <ImageView
                            android:id="@+id/iv_tag"
                            android:layout_marginRight="10dp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:src="@mipmap/enter"
                            android:layout_width="8dp"
                            android:layout_height="15dp" />
                    </RelativeLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="64dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:textSize="@dimen/text_size_16"
                        android:textColor="@color/black_33"
                        android:text="云车宝账号"
                        android:layout_marginLeft="15dp"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/account"
                        android:layout_marginRight="15dp"
                        android:layout_alignParentRight="true"
                        android:textSize="@dimen/text_size_16"
                        android:textColor="@color/black_33"
                        android:text="zrrrtrg"
                        android:layout_marginLeft="15dp"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RelativeLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="64dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:textSize="@dimen/text_size_16"
                        android:textColor="@color/black_33"
                        android:text="性别"
                        android:layout_marginLeft="15dp"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/sex"
                        android:layout_marginRight="15dp"
                        android:layout_alignParentRight="true"
                        android:textSize="@dimen/text_size_16"
                        android:textColor="@color/black_33"
                        android:text="男"
                        android:layout_marginLeft="15dp"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RelativeLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:id="@+id/cd_car"

                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="64dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/tv_hao"

                        android:textSize="@dimen/text_size_16"
                        android:textColor="@color/black_33"
                        android:text="车辆型号"
                        android:layout_marginLeft="15dp"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:gravity="end"
                        android:layout_toRightOf="@id/tv_hao"
                        android:id="@+id/car"
                        android:layout_marginRight="15dp"
                        android:layout_alignParentRight="true"
                        android:textSize="@dimen/text_size_16"
                        android:textColor="@color/black_33"
                        android:text="兰博基尼"
                        android:layout_marginLeft="15dp"
                        android:layout_centerVertical="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </RelativeLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="132dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <RelativeLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp">
                        <TextView
                            android:textSize="@dimen/text_size_16"
                            android:textColor="@color/black_33"
                            android:text="消息免打扰"
                            android:layout_marginLeft="15dp"
                            android:layout_centerVertical="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <ImageView
                            android:id="@+id/iv_msg"
                            android:scaleType="fitXY"
                            android:layout_marginRight="15dp"
                            android:layout_alignParentRight="true"
                            android:src="@mipmap/white_switch"
                            android:layout_marginLeft="15dp"
                            android:layout_centerVertical="true"
                            android:layout_width="40dp"
                            android:layout_height="30dp" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp">
                        <TextView
                            android:textSize="@dimen/text_size_16"
                            android:textColor="@color/black_33"
                            android:text="会话置顶"
                            android:layout_marginLeft="15dp"
                            android:layout_centerVertical="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <ImageView
                            android:id="@+id/iv_top"
                            android:scaleType="fitXY"
                            android:layout_marginRight="15dp"
                            android:layout_alignParentRight="true"
                            android:src="@mipmap/white_switch"
                            android:layout_marginLeft="15dp"
                            android:layout_centerVertical="true"
                            android:layout_width="40dp"
                            android:layout_height="30dp" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/rl_clears"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp">
                        <TextView
                            android:textSize="@dimen/text_size_16"
                            android:textColor="@color/black_33"
                            android:text="清除聊天记录"
                            android:layout_marginLeft="15dp"
                            android:layout_centerVertical="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <ImageView
                            android:layout_marginRight="10dp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:src="@mipmap/enter"
                            android:layout_width="8dp"
                            android:layout_height="15dp" />
                    </RelativeLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="15dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/sendmsg"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:text="发送消息"
                    android:background="#F3CA65"
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="15dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/voice"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textColor="@color/black_33"
                    android:text="语音通话"
                    android:background="@drawable/white_shape"
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="15dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/video"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textColor="@color/black_33"
                    android:text="视频通话"
                    android:background="@drawable/white_shape"
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </com.cheyibao.model.ReboundScrollView>


</LinearLayout>
