<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/top_title_layout"></include>



     <LinearLayout
         android:background="@color/white"
         android:layout_width="match_parent"
         android:layout_height="50dp">
         <RelativeLayout

             android:layout_weight="1"
             android:layout_width="0dp"
             android:layout_height="match_parent">
             <LinearLayout
                 android:id="@+id/rl_left"
                 android:gravity="center_vertical"
                 android:layout_centerInParent="true"
                 android:layout_width="wrap_content"
                 android:layout_height="match_parent">
                 <TextView
                     android:id="@+id/tv_city"
                     android:layout_marginRight="10dp"
                     android:textSize="14sp"
                     android:textColor="@color/black_33"
                     android:text="昆明"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content" />
                 <ImageView
                     android:src="@mipmap/arrow_down"
                     android:layout_width="10dp"
                     android:layout_height="10dp" />
             </LinearLayout>
         </RelativeLayout>
         <RelativeLayout

             android:layout_weight="1"
             android:layout_width="0dp"
             android:layout_height="match_parent">
             <LinearLayout
                 android:id="@+id/rl_right"
                 android:gravity="center_vertical"
                 android:layout_centerInParent="true"
                 android:layout_width="wrap_content"
                 android:layout_height="match_parent">
                 <TextView
                     android:id="@+id/tv_type"
                     android:layout_marginRight="10dp"
                     android:textSize="14sp"
                     android:textColor="@color/black_33"
                     android:text="距离最近"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content" />
                 <ImageView
                     android:src="@mipmap/arrow_down"
                     android:layout_width="10dp"
                     android:layout_height="10dp" />
             </LinearLayout>
         </RelativeLayout>
     </LinearLayout>
    <View
        android:id="@+id/view"
        android:background="@color/gray_ee"
        android:layout_width="match_parent"
        android:layout_height="1dp"></View>
     <com.example.yunchebao.maket.model.LoadMoreListView
         android:id="@+id/lv_car"

         android:layout_width="match_parent"
         android:layout_height="match_parent"></com.example.yunchebao.maket.model.LoadMoreListView>
</LinearLayout>