<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/white">

    <ImageView
        android:id="@+id/back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:padding="15dp"
        android:src="@mipmap/back" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="全部收藏"
        android:textColor="@color/black_33"
        android:textSize="16sp" />

    <LinearLayout
        android:id="@+id/searchLay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:padding="10dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="搜索"
            android:textSize="10sp" />
    </LinearLayout>

    <com.coorchice.library.SuperTextView
        android:id="@+id/superText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:padding="4dp"
        android:text="进店"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:visibility="gone"
        app:corner="10dp"
        app:solid="@color/yellow_65" />

    <TextView
        android:id="@+id/textBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="10dp"
        android:text="添加"
        android:textColor="@color/red_f0"
        android:textSize="16sp"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/shareBtn"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentRight="true"
        android:layout_toLeftOf="@id/collectBtn"
        android:padding="15dp"
        android:src="@mipmap/sharing_gray_icon"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/shopCartBtn"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_alignParentRight="true"
        android:layout_toLeftOf="@id/collectBtn"
        android:padding="15dp"
        android:src="@mipmap/shoppingcart_icon"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/menuBtn"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_alignParentRight="true"
        android:layout_toLeftOf="@id/collectBtn"
        android:padding="15dp"
        android:src="@mipmap/menu_icon"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/userBtn"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_alignParentRight="true"
        android:layout_toLeftOf="@id/collectBtn"
        android:padding="15dp"
        android:src="@mipmap/user_gray_icon"
        android:visibility="gone" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/gray_ee"></View>
</RelativeLayout>