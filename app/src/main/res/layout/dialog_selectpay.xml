<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/rl_wechat"
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_wechat"
            android:scaleType="fitXY"
            android:src="@mipmap/weixin_icon"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <LinearLayout
            android:layout_toLeftOf="@id/iv_choose"
            android:layout_toRightOf="@id/iv_wechat"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="14sp"
                android:textColor="@color/black_33"
                android:text="微信支付"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="5dp"
                android:textSize="10sp"
                android:textColor="@color/gray_99"
                android:text="推荐已经安装微信客户端的用户使用"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <ImageView

            android:src="@mipmap/select"
            android:layout_centerVertical="true"
            android:id="@+id/iv_choose"
            android:layout_alignParentRight="true"
            android:layout_width="20dp"
            android:layout_height="20dp" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_alipay"
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_alipay"
            android:scaleType="fitXY"
            android:src="@mipmap/zhifubao_icon"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <LinearLayout
            android:layout_toLeftOf="@id/iv_choose2"
            android:layout_toRightOf="@id/iv_alipay"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="14sp"
                android:textColor="@color/black_33"
                android:text="支付宝支付"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="5dp"
                android:textSize="10sp"
                android:textColor="@color/gray_99"
                android:text="推荐已经安装支付宝客户端的用户使用"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <ImageView
            android:src="@mipmap/select"
            android:layout_centerVertical="true"
            android:id="@+id/iv_choose2"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            android:layout_width="20dp"
            android:layout_height="20dp" />
    </RelativeLayout>

    <com.coorchice.library.SuperTextView
        android:id="@+id/tv_confirm"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:background="@color/green_67"
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:text="确认支付"
        android:layout_height="40dp" />
</LinearLayout>