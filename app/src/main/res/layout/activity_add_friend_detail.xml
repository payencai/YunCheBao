<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".rongcloud.activity.StrangerDelActivity">
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/back"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/back"
            android:layout_width="10dp"
            android:layout_height="18dp" />
        <TextView
            android:textSize="18sp"
            android:textColor="@color/black_33"
            android:text="详情"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:background="#e2e2e2"
        android:layout_width="match_parent"
        android:layout_height="1dp"></View>
    <android.support.v7.widget.CardView
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <com.payencai.library.view.CircleImageView
                    android:scaleType="fitXY"
                    android:id="@+id/iv_icon"
                    android:layout_marginLeft="15dp"
                    android:src="@mipmap/login_img_icon"
                    android:layout_centerVertical="true"
                    android:layout_width="40dp"
                    android:layout_height="40dp" />
                <TextView
                    android:id="@+id/chatname"
                    android:textSize="@dimen/text_size_16"
                    android:textColor="@color/black_33"
                    android:text="哈哈哈 "
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@+id/iv_icon"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>
            <View
                android:layout_marginTop="10dp"
                android:alpha="0.5"
                android:background="#e2e2e2"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"></View>
            <RelativeLayout
                android:id="@+id/rl_tag"
                android:layout_margin="15dp"
                android:layout_width="match_parent"
                android:layout_height="30dp">
                <TextView
                    android:textStyle="bold"
                    android:textSize="@dimen/text_size_16"
                    android:textColor="@color/black_33"
                    android:text="标签 "
                    android:layout_marginLeft="5dp"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/enter"
                    android:layout_width="8dp"
                    android:layout_height="15dp" />
            </RelativeLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="64dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
            android:textSize="@dimen/text_size_16"
            android:textColor="@color/black_33"
            android:text="云车宝账号"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/account"
                android:layout_marginRight="15dp"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/text_size_16"
                android:textColor="@color/black_33"
                android:text="zrrrtrg"
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="64dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:textSize="@dimen/text_size_16"
                android:textColor="@color/black_33"
                android:text="性别"
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_sex"
                android:layout_marginRight="15dp"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/text_size_16"
                android:textColor="@color/black_33"
                android:text="男"
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cd_car"
        android:visibility="gone"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="64dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:textSize="@dimen/text_size_16"
                android:textColor="@color/black_33"
                android:text="车辆型号"
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/car"
                android:layout_marginRight="15dp"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/text_size_16"
                android:textColor="@color/black_33"
                android:text="暂无"
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="15dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/send"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:text="发送消息"
            android:background="#F3CA65"
            android:layout_width="match_parent"
            android:layout_height="40dp" />
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="15dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/apply"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:text="申请添加好友"
            android:background="#F3CA65"
            android:layout_width="match_parent"
            android:layout_height="40dp" />
    </android.support.v7.widget.CardView>

</LinearLayout>
