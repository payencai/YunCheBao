<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/theForm"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_f4"
    android:orientation="vertical">


    <!--android:fitsSystemWindows="true"-->
    <com.handmark.pulltorefresh.library.PullToRefreshScrollView
        android:id="@+id/my_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--搜索栏-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/user_center_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="12dp"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:paddingTop="12dp"
                    android:src="@mipmap/people_icon" />

                <ImageView
                    android:id="@+id/shop_cart_icon"
                    android:layout_width="35dp"
                    android:layout_height="43dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:paddingBottom="12dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="6dp"
                    android:paddingTop="12dp"
                    android:src="@mipmap/shoppingcart_icon" />

                <ImageView
                    android:visibility="gone"
                    android:id="@+id/messenger_icon"
                    android:layout_width="37dp"
                    android:layout_height="41dp"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/shop_cart_icon"
                    android:paddingBottom="12dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="12dp"
                    android:src="@mipmap/chat_icon" />


                <RelativeLayout
                    android:id="@+id/search_lay"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_toLeftOf="@id/messenger_icon"
                    android:layout_toRightOf="@id/user_center_icon"
                    android:background="@drawable/gray_circle_background">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:drawableLeft="@mipmap/search__small_icon"
                        android:drawablePadding="10dp"
                        android:text="搜索您想要的"
                        android:textColor="@color/gray_99"
                        android:textSize="12sp" />
                </RelativeLayout>
            </RelativeLayout>

            <com.youth.banner.Banner
                android:id="@+id/slideshowView"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:visibility="visible" />
             <com.tool.view.GridViewForScrollView
                 android:paddingBottom="5dp"
                 android:id="@+id/gv_type"
                 android:numColumns="4"
                 android:layout_width="match_parent"
                 android:layout_height="180dp">
             </com.tool.view.GridViewForScrollView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="4dp"
                    android:paddingLeft="14dp"
                    android:paddingTop="14dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@mipmap/title_line_orange"
                        android:drawablePadding="10dp"
                        android:text="热卖商品"
                        android:textColor="@color/black_33" />

                    <ImageView
                        android:id="@+id/middleMore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:src="@mipmap/gengduo_icon" />
                </RelativeLayout>

                <com.tool.view.GridViewForScrollView
                    android:id="@+id/middleGrid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:numColumns="4"
                    android:padding="6dp"></com.tool.view.GridViewForScrollView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_knowyou"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingBottom="10dp"
                    android:paddingLeft="14dp"
                    android:paddingTop="14dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="10dp"
                        android:text="只有我懂你"
                        android:textColor="@color/black_33" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:drawablePadding="10dp"
                        android:text="量身打造，只为特别的你"
                        android:textColor="@color/gray_99"
                        android:textSize="@dimen/sp_12" />
                </LinearLayout>



                <com.tool.listview.PersonalListView
                    android:id="@+id/downGrid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></com.tool.listview.PersonalListView>
            </LinearLayout>
        </LinearLayout>
    </com.handmark.pulltorefresh.library.PullToRefreshScrollView>

</LinearLayout>
