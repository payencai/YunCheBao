<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_ee"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/back"
            android:padding="15dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/back"
            android:layout_width="50dp"
            android:layout_height="50dp" />
        <TextView
            android:textSize="18sp"
            android:id="@+id/title"
            android:textColor="@color/black_33"
            android:layout_centerInParent="true"
            android:text="绑定账号"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_width="90dp"
            android:layout_height="90dp"
            app:placeholderImage="@mipmap/login_img_icon"
            app:placeholderImageScaleType="fitXY"
            app:roundAsCircle="true" />

        <LinearLayout

            android:id="@+id/view1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="gone">

            <com.xw.repo.XEditText
                android:id="@+id/phoneNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/gray_ee"
                android:gravity="center"
                android:hint="输入手机号"
                android:inputType="number"
                android:minWidth="100dp"
                android:padding="10dp"
                android:textColor="@color/black_33"
                android:textSize="15sp" />

            <View
                android:layout_width="200dp"
                android:layout_height="2dp"
                android:layout_margin="10dp"
                android:background="@color/black_0d"></View>

            <TextView
                android:id="@+id/code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="获取验证码"
                android:textColor="@color/gray_99"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/view2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/sendphone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1762055884455"
                android:textColor="@color/gray_99"
                android:textSize="14sp" />
            <TextView
                android:layout_marginTop="15dp"
                android:id="@+id/send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已向该手机发送了验证码"
                android:textColor="@color/gray_99"
                android:textSize="14sp" />
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp">

                <EditText
                    android:id="@+id/codeNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/gray_ee"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:inputType="number"
                    android:text=""
                    android:textSize="10sp" />

                <LinearLayout
                    android:id="@+id/codeLay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/gray_ee"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/code1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/yellow_65"
                            android:textSize="17sp" />

                        <View
                            android:layout_width="27dp"
                            android:layout_height="1dp"
                            android:layout_marginTop="4dp"
                            android:background="@color/black_0d"></View>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/code2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/yellow_65"
                            android:textSize="17sp" />

                        <View
                            android:layout_width="27dp"
                            android:layout_height="1dp"
                            android:layout_marginTop="4dp"
                            android:background="@color/black_0d"></View>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/code3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/yellow_65"
                            android:textSize="17sp" />

                        <View
                            android:layout_width="27dp"
                            android:layout_height="1dp"
                            android:layout_marginTop="4dp"
                            android:background="@color/black_0d"></View>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/code4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/yellow_65"
                            android:textSize="17sp" />

                        <View
                            android:layout_width="27dp"
                            android:layout_height="1dp"
                            android:layout_marginTop="4dp"
                            android:background="@color/black_0d"></View>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/code5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/yellow_65"
                            android:textSize="17sp" />

                        <View
                            android:layout_width="27dp"
                            android:layout_height="1dp"
                            android:layout_marginTop="4dp"
                            android:background="@color/black_0d"></View>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/code6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/yellow_65"
                            android:textSize="17sp" />

                        <View
                            android:layout_width="27dp"
                            android:layout_height="1dp"
                            android:layout_marginTop="4dp"
                            android:background="@color/black_0d"></View>
                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>

            <TextView
                android:id="@+id/codeGetAgain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:text="重新获取"
                android:textColor="@color/gray_99"
                android:textSize="17sp" />


        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_below="@+id/top"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/gray_ee"
            android:gravity="center"
            android:hint="6-20位密码，需组合数字，字母或符号"
            android:minWidth="100dp"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColor="@color/black_33"
            android:textSize="15sp" />
        <View
            android:layout_width="200dp"
            android:layout_height="2dp"
            android:layout_margin="10dp"
            android:background="@color/black_0d"></View>
        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="登录并绑定"
            android:textColor="@color/yellow_02"
            android:textSize="17sp" />
    </LinearLayout>


</RelativeLayout>