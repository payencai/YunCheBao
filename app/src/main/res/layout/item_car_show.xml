<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
   <LinearLayout
       android:gravity="center_vertical"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <com.payencai.library.view.CircleImageView
           android:id="@+id/head"
           android:scaleType="fitXY"
           android:src="@mipmap/notlogin_head"
           android:layout_width="30dp"
           android:layout_height="30dp" />
       <LinearLayout
           android:layout_marginLeft="10dp"
           android:orientation="vertical"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content">
           <TextView
               android:id="@+id/name"
               android:textColor="@color/black_33"
               android:textSize="14sp"
               android:text="13202908144"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
           <TextView
               android:id="@+id/time"
               android:layout_marginTop="5dp"
               android:textColor="@color/gray_99"
               android:textSize="12sp"
               android:text="2019-01-29 12:21:12"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
       </LinearLayout>
   </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="120dp"
            android:layout_height="100dp">
            <ImageView
                android:scaleType="fitXY"
                android:id="@+id/iv_car"
                android:src="@mipmap/car_icon"
                android:layout_width="120dp"
                android:layout_height="100dp" />
            <ImageView
                android:layout_centerInParent="true"
                android:elevation="1dp"
                android:src="@drawable/video"
                android:layout_width="30dp"
                android:layout_height="30dp" />
        </RelativeLayout>
        <TextView
            android:id="@+id/content"
            android:maxLines="3"
            android:textSize="14sp"
            android:textColor="@color/black_33"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="哈哈哈哈"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <RelativeLayout
        android:padding="5dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <ImageView
                android:layout_marginLeft="15dp"
                android:src="@mipmap/chat_icon"
                android:layout_width="15dp"
                android:layout_height="12dp" />
            <TextView
                android:id="@+id/tv_read"
                android:gravity="top"
                android:textSize="12sp"
                android:layout_marginLeft="5dp"
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>
    <View
        android:layout_marginTop="10dp"
        android:background="#e2e2e2"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"></View>
</LinearLayout>