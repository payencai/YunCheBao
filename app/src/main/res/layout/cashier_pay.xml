<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="云车宝收银台"
            android:textColor="@color/black_33"
            android:textSize="14dp" />

        <ImageView
            android:id="@+id/recharge_dialog_close"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="10dp"
            android:scaleType="center"
            android:src="@mipmap/cancle_icon" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_ee" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray_f4"
        android:gravity="right"
        android:orientation="horizontal"
        android:paddingBottom="26dp"
        android:paddingRight="15dp"
        android:paddingTop="26dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="需支付"
            android:textColor="@color/black_0d"
            android:textSize="17sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥999.00元"
            android:textColor="@color/red_25"
            android:textSize="17sp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/card1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/top_line_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="15dp">


        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/icon" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="7"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="云车宝支付"
                    android:textColor="@color/black_33" />

                <com.coorchice.library.SuperTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="推荐"
                    android:layout_marginLeft="10dp"
                    app:corner="2dp"
                    app:solid="@color/orange_1f"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    android:padding="2dp"/>
            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="推荐使用云车宝支付充值送宝币"
                android:textSize="10sp" />
        </LinearLayout>


        <ImageView
            android:id="@+id/selectBtn1"
            android:layout_width="0dp"
            android:layout_height="23dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_weight="2"
            android:src="@mipmap/greencheck_icon"
            android:visibility="visible" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/card2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/top_line_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="15dp">


        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/zhifubao_icon" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="7"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="支付宝支付"
                android:textColor="@color/black_33" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="推荐已安装支付宝客户端的用户使用"
                android:textSize="10sp" />
        </LinearLayout>


        <ImageView
            android:id="@+id/selectBtn2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_weight="2"
            android:src="@mipmap/greencheck_icon"
            android:visibility="gone" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/card3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/top_line_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="15dp">


        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/weixin_icon" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="7"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微信支付"
                android:textColor="@color/black_33" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="推荐已安装微信客户端的用户使用"
                android:textSize="10sp" />
        </LinearLayout>


        <ImageView
            android:id="@+id/selectBtn3"
            android:layout_width="0dp"
            android:layout_height="23dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_weight="2"
            android:src="@mipmap/check_yellow_icon"
            android:visibility="gone" />
    </LinearLayout>

    <TextView
        android:id="@+id/submitBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/yellow_65"
        android:gravity="center"
        android:padding="18dp"
        android:text="云车宝支付999.00元"
        android:textColor="@color/white" />


</LinearLayout>
