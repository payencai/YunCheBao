<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.cheyibao.NewCarShopActivity">

    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/back"
            android:layout_width="10dp"
            android:layout_height="18dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="店铺"
            android:textColor="@color/black_33"
            android:textSize="18sp" />
        <View
            android:layout_alignParentBottom="true"
            android:background="#e2e2e2"
            android:layout_width="match_parent"
            android:layout_height="1dp"></View>
    </RelativeLayout>
    <com.tool.listview.PersonalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:paddingBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="15dp">

                <TextView
                    android:id="@+id/tv_shopname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="云南隆创尚通" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="12dp"
                        android:src="@mipmap/localize_small" />

                    <TextView
                        android:id="@+id/tv_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="昆明市滇池路542号（滇池路与日新路交叉口）"
                        android:textColor="@color/gray_99"
                        android:textSize="10sp" />
                </LinearLayout>
            </LinearLayout>


            <android.support.design.widget.TabLayout
                android:layout_marginTop="10dp"
                android:id="@+id/tab_gank"
                app:tabGravity="center"
                app:tabPaddingStart="20dp"
                app:tabIndicatorColor="@color/yellow_64"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                />

            <com.tool.listview.PersonalViewPager
                android:id="@+id/vp_gank"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#fff2f4f5">

            </com.tool.listview.PersonalViewPager>
        </LinearLayout>
    </com.tool.listview.PersonalScrollView>

</LinearLayout>
