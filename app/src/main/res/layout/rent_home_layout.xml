<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <android.support.v4.widget.NestedScrollView
        android:focusableInTouchMode="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:descendantFocusability="blocksDescendants"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/split_line_color"/>
            <RadioGroup
                android:id="@+id/rent_type_parent_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@color/white">
                <RadioButton
                    android:id="@+id/self_driving_radio_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/self_driving"
                    android:padding="10dp"
                    android:button="@null"
                    android:textColor="@color/black_33"
                    android:textSize="17sp"/>

                <RadioButton
                    android:id="@+id/long_rent_radio_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/long_rent"
                    android:padding="10dp"
                    android:button="@null"
                    android:textColor="@color/black_33"
                    android:textSize="14sp"/>
            </RadioGroup>

            <com.youth.banner.Banner
                android:id="@+id/banner"
                android:layout_width="match_parent"
                android:layout_height="210dp"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white_fe"
                android:paddingTop="5dp">
                <LinearLayout
                    android:id="@+id/self_driving_parent_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_vertical">
                    <com.cheyibao.view.RentCarAddressView
                        android:id="@+id/rent_Car_address_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/split_line_color"/>

                    <com.cheyibao.view.RentCarTimeView
                        android:id="@+id/rent_car_time_View"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <android.support.v7.widget.CardView
                        android:id="@+id/pick_the_car_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="2dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="@color/yellow_65"
                        app:contentPadding="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="@string/pick_the_car_immediately"
                            android:textColor="@color/white_fe"
                            android:textSize="17sp"/>
                    </android.support.v7.widget.CardView>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/split_line_color"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="15dp">
                        <TextView
                            android:id="@+id/self_driver_order_click_view"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="@string/self_driver_order"
                            android:drawableTop="@mipmap/carrental_btn_gettheorder"
                            android:drawablePadding="5dp"
                            android:gravity="center"/>
                        <TextView
                            android:id="@+id/high_end_self_driving_click_view"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="@string/high_end_self_driving"
                            android:drawableTop="@mipmap/carrental_btn_drive"
                            android:drawablePadding="5dp"
                            android:gravity="center"/>
                        <TextView
                            android:id="@+id/store_query_click_view"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="@string/store_query"
                            android:drawableTop="@mipmap/carrental_btn_storethequery"
                            android:drawablePadding="5dp"
                            android:gravity="center"/>
                        <TextView
                            android:id="@+id/car_type_query_click"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="@string/car_type_query"
                            android:drawableTop="@mipmap/carrental_btn_modelqueries"
                            android:drawablePadding="5dp"
                            android:gravity="center"/>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/long_rent_parentView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">
                    <android.support.v7.widget.CardView
                        android:id="@+id/long_rent_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:contentPadding="10dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="@color/yellow_65"
                        android:layout_marginLeft="40dp"
                        android:layout_marginStart="40dp"
                        android:layout_marginRight="40dp"
                        android:layout_marginEnd="40dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/long_rent_application"
                            android:textColor="@color/white_fe"
                            android:textSize="14sp"
                            android:layout_gravity="center"/>
                    </android.support.v7.widget.CardView>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        android:background="@color/gray_290d"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/recommended_vehicle_type"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/split_line_color"/>

                    <com.common.MultipleStatusView
                        android:id="@+id/multiple_status_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <android.support.v7.widget.RecyclerView

                            android:id="@+id/recommended_vehicle_type_list_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </com.common.MultipleStatusView>
                </LinearLayout>

            </FrameLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>
