<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_margin="20dp"
              android:orientation="vertical"
              android:id="@+id/layout_map_select"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">


    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout

            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:background="@drawable/sp_corners_top_10_solid_white"
                android:id="@+id/tv_baidu"
                android:padding="5dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textColor="@color/blue_9DD9"
                android:textSize="20sp"
                android:text="百度地图"
                />
            <View
                android:background="#e2e2e2"
                android:layout_width="match_parent"
                android:layout_height="1dp"></View>
            <TextView
                android:background="@color/white"
                android:id="@+id/tv_google"
                android:padding="5dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textColor="@color/blue_9DD9"
                android:textSize="20sp"
                android:text="谷歌地图"/>
            <View
                android:background="#e2e2e2"
                android:layout_width="match_parent"
                android:layout_height="1dp"></View>
            <TextView
                android:background="@drawable/sp_corners_bottom_10_solid_white"
                android:id="@+id/tv_gaode"
                android:padding="5dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textColor="@color/blue_9DD9"
                android:textSize="20sp"
                android:text="高德地图"/>
        </LinearLayout>

        <TextView
            android:background="@drawable/sp_corners_10_solid_white"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:id="@+id/tv_cancel"
            android:padding="5dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="@color/blue_9DD9"
            android:textSize="20sp"
            android:text="取消"/>
    </LinearLayout>


</LinearLayout>
