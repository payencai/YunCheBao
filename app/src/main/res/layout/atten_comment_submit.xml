<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#50333333"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/top_line_bg"
        android:clickable="true"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/cancelBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="取消"
                android:textColor="@color/gray_99"
                android:textSize="14sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:padding="15dp"
                android:text="回帖"
                android:textColor="@color/black_33"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/submitBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:padding="15dp"
                android:text="发送"
                android:textColor="@color/gray_66"
                android:textSize="14sp" />
        </RelativeLayout>

        <sj.keyboard.widget.EmoticonsEditText
            android:id="@+id/et_content"
            style="@style/emotion_editview"
            android:hint="输入内容……" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray_ee"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/cameraBtn"
                android:layout_width="53dp"
                android:layout_height="50dp"
                android:padding="15dp"
                android:scaleType="fitXY"
                android:src="@mipmap/camera_icon" />

            <ImageView
                android:id="@+id/faceBtn"
                android:layout_width="51dp"
                android:layout_height="51dp"
                android:padding="15dp"
                android:scaleType="fitXY"
                android:src="@mipmap/smile_gray_icon" />

            <ImageView
                android:id="@+id/picBtn"
                android:layout_width="52dp"
                android:layout_height="49dp"
                android:padding="15dp"
                android:scaleType="fitXY"
                android:src="@mipmap/picuter_gray_icon" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>