<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_margin="20dp"
              android:orientation="vertical"
              android:gravity="bottom"
              android:id="@+id/layout_image_select"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">


    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout

            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:background="@drawable/sp_corners_top_10_solid_white"
                android:id="@+id/tv_select_camera"
                android:padding="5dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textColor="@color/blue_9DD9"
                android:textSize="20sp"
                android:text="拍照"
                />
            <View
                android:background="@color/gray_99"
                android:layout_width="match_parent"
                android:layout_height="1dp"></View>
            <TextView
                android:background="@drawable/sp_corners_bottom_10_solid_white"
                android:id="@+id/tv_select_gallery"
                android:padding="5dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textColor="@color/blue_9DD9"
                android:textSize="20sp"
                android:text="从相册选择"/>
        </LinearLayout>

        <TextView
            android:background="@drawable/sp_corners_10_solid_white"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:id="@+id/tv_select_cancel"
            android:padding="5dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="@color/blue_9DD9"
            android:textSize="20sp"
            android:text="取消"/>
    </LinearLayout>


</LinearLayout>
