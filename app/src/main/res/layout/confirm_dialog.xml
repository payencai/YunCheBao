<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center">
    <TextView
        android:id="@+id/title_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="5dp"
        android:drawableStart="@mipmap/confirm"
        android:textColor="@color/yellow_65"
        android:textSize="16sp"
        tools:text="提示"
        android:layout_marginTop="15dp"
        android:gravity="center"/>
    <TextView
        android:id="@+id/message_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="提示信息提示信息提示信息提示信息提示信息提示信息提示信息提示信息提示信息提示信息"
        android:padding="20dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/split_line_color"
        android:alpha="0.5"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:id="@+id/confirm_view"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/confirm1"
            android:gravity="center"
            android:textSize="17sp"
            android:textColor="@color/yellow_65"
            android:padding="15dp"
            android:visibility="gone"/>
        <View
            android:id="@+id/button_divider_line_view"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/split_line_color"
            android:alpha="0.5"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/cancel_view"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/cancel"
            android:gravity="center"
            android:textSize="17sp"
            android:textColor="@color/gray_99"
            android:padding="15dp"
            android:visibility="gone"/>
    </LinearLayout>
</LinearLayout>