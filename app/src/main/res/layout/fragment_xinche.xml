<?xml version="1.0" encoding="utf-8"?>
<com.cheyibao.model.ReboundScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_ee">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <RelativeLayout
                android:id="@+id/search_lay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight="7"
                android:background="@drawable/gray_circle_background"
                android:padding="6dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:drawableLeft="@mipmap/search__small_icon"
                    android:drawablePadding="10dp"
                    android:text="搜索您想要的"
                    android:textColor="@color/gray_99"
                    android:textSize="12sp" />
            </RelativeLayout>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="昆明"
                android:textColor="@color/yellow_77"
                android:textSize="16sp" />
        </LinearLayout>
        <!--广告栏banner-->
        <com.tool.slideshowview.SlideShowView
            android:id="@+id/slideshowView"
            android:layout_width="fill_parent"
            android:layout_height="210dp"
            android:background="@color/white"
            android:visibility="visible" />
        <!--广告栏banner  end-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="8dp">

            <com.coorchice.library.SuperTextView
                android:id="@+id/selectMenu1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="10dp"
                android:text="5-10万"
                android:textColor="@color/black_33"
                android:textSize="12sp"
                app:corner="6dp"
                app:solid="@color/white"
                app:stroke_color="@color/gray_ee"
                app:stroke_width="1dp"></com.coorchice.library.SuperTextView>

            <com.coorchice.library.SuperTextView
                android:id="@+id/selectMenu2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="10dp"
                android:text="10-15万"
                android:textColor="@color/black_33"
                android:textSize="12sp"
                app:corner="6dp"
                app:solid="@color/white"
                app:stroke_color="@color/gray_ee"
                app:stroke_width="1dp"></com.coorchice.library.SuperTextView>

            <com.coorchice.library.SuperTextView
                android:id="@+id/selectMenu3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="10dp"
                android:text="SUV"
                android:textColor="@color/black_33"
                android:textSize="12sp"
                app:corner="6dp"
                app:solid="@color/white"
                app:stroke_color="@color/gray_ee"
                app:stroke_width="1dp"></com.coorchice.library.SuperTextView>

            <com.coorchice.library.SuperTextView
                android:id="@+id/selectMenu4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="10dp"
                android:text="更多条件"
                android:textColor="@color/yellow_77"
                android:textSize="12sp"
                app:corner="6dp"
                app:solid="@color/white"
                app:stroke_color="@color/gray_ee"
                app:stroke_width="1dp"></com.coorchice.library.SuperTextView>
        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="10dp">

            <LinearLayout
                android:id="@+id/menuLay1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/car_icon3" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="广汽传祺"
                    android:textColor="@color/black_33"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/menuLay2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/car_icon1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="宝马"
                    android:textColor="@color/black_33"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/menuLay3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/car_icon5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="WEY"
                    android:textColor="@color/black_33"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/menuLay4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/car_icon4" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="荣威"
                    android:textColor="@color/black_33"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/menuLay5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/car_icon2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="丰田"
                    android:textColor="@color/black_33"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="10dp">

            <LinearLayout
                android:id="@+id/menuLay6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/car_icon4" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="大众"
                    android:textColor="@color/black_33"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/menuLay7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/car_icon5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="福特"
                    android:textColor="@color/black_33"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/menuLay8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/car_icon5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="WEY"
                    android:textColor="@color/black_33"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/menuLay9"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/car_icon4" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="日产"
                    android:textColor="@color/black_33"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/menuLay10"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/car_icon2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="吉利"
                    android:textColor="@color/black_33"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <com.tool.view.GridViewForScrollView
            android:numColumns="5"
            android:id="@+id/gv_newcar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </com.tool.view.GridViewForScrollView>


        <com.tool.view.ListViewForScrollView
            android:id="@+id/listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:focusable="false"
            android:background="@color/white"></com.tool.view.ListViewForScrollView>
        <!--字母导航栏-->
        <com.nanchen.wavesidebar.WaveSideBarView
            android:id="@+id/index_layout"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:visibility="gone"
            app:sidebar_lazy_respond="false"
            app:sidebar_text_color="@color/colorAccent" />


    </LinearLayout>

</com.cheyibao.model.ReboundScrollView>