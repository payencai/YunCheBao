<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#88000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/ll_target"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.tool.view.GridViewForScrollView
            android:layout_margin="10dp"
            android:verticalSpacing="5dp"
            android:horizontalSpacing="5dp"
            android:numColumns="3"
            android:id="@+id/sg_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </com.tool.view.GridViewForScrollView>
        <LinearLayout
            android:visibility="gone"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                android:padding="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="价格"
                    android:textColor="@color/black_33"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/万元"
                    android:textColor="@color/gray_99"
                    android:textSize="10sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="不限"
                    android:textColor="@color/black_33"
                    android:textSize="14sp" />
            </LinearLayout>

            <com.warkiz.widget.IndicatorSeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:isb_indicator_color="#f3ca65"
                app:isb_indicator_type="rectangle_rounded_corner"
                app:isb_progress="100"
                app:isb_min="0"
                app:isb_max="100"
                app:isb_seek_bar_type="discrete_ticks_texts"
                app:isb_text_array="@array/indecator_array_licheng"
                app:isb_text_color="#999999"
                app:isb_text_size="14sp"
                app:isb_thumb_color="#f3ca65"
                app:isb_thumb_drawable="@mipmap/slippageicon"
                app:isb_tick_color="#f3ca65"
                app:isb_tick_num="6"
                app:isb_tick_size="1dp"
                app:isb_tick_type="oval"
                app:isb_track_background_bar_color="#999999"
                app:isb_track_progress_bar_color="#f3ca65" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_confirm"
            android:layout_margin="20dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="确定"
            android:background="@color/yellow_64"
            android:layout_width="150dp"
            android:layout_height="40dp" />
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"></View>
</LinearLayout>