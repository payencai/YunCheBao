<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="1dp"
    android:layout_marginBottom="1dp"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp">
        <TextView
            android:id="@+id/rent_duration_tv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            tools:text="20天"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@color/yellow_63"
            android:textSize="17sp"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/day_price_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="￥77元"
                    android:textSize="17sp"
                    android:textColor="@color/yellow_63"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/"
                    android:textSize="17sp"
                    android:textColor="@color/gray_99"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/per_day_price"
                    android:textSize="14sp"
                    android:textColor="@color/gray_99"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">
                <TextView
                    android:id="@+id/original_price_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="原价123元"
                    android:textSize="12sp"
                    android:textColor="@color/gray_99"
                    android:layout_marginEnd="10dp"/>

                <TextView
                    android:id="@+id/cut_down_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="省12333元"
                    android:textColor="@color/black_33"
                    android:textSize="12sp"
                    android:layout_marginStart="10dp"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/total_price_view"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            tools:text="3658元"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:textColor="@color/yellow_63"/>
        <FrameLayout
            android:id="@+id/booking_view"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_gravity="center">
            <android.support.v7.widget.CardView
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:cardBackgroundColor="#F5A623"
                app:cardCornerRadius="25dp"
                app:cardElevation="0dp"
                android:layout_gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/booking"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:textSize="14sp"/>
            </android.support.v7.widget.CardView>
        </FrameLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/split_line_color"
        android:layout_marginTop="15dp"/>
</LinearLayout>