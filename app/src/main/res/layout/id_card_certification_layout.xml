<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/gray_ee"
    android:orientation="vertical">

    <include layout="@layout/top_title_layout"></include>
    <com.cheyibao.model.ReboundScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:background="@color/white"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="14dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="姓名"
                        android:textColor="@color/black_33"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/et_name"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="9"
                        android:background="@color/white"
                        android:hint="请输入姓名"
                        android:textColor="@color/black_33"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/two_line_bg"
                    android:orientation="horizontal"
                    android:padding="14dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="住址"
                        android:textColor="@color/black_33"
                        android:textSize="14sp" />

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="9"
                        android:background="@color/white"
                        android:text="云南省昆明市西山区前卫西路世纪半岛橄榄谷706号"
                        android:textColor="@color/black_33"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal"
                android:padding="14dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="身份证"
                    android:textColor="@color/black_33"
                    android:textSize="14sp" />

                <EditText

                    android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                    android:id="@+id/et_number"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="9"
                    android:background="@color/white"
                    android:hint="请输入身份证号码"
                    android:textColor="@color/black_33"
                    android:textSize="14sp" />
            </LinearLayout>



            <LinearLayout
                android:visibility="gone"
                android:id="@+id/ll_add"
                android:background="@color/white"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"

                    android:orientation="vertical"
                    android:padding="14dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="请拍摄并上传你的身份证照片"
                        android:textColor="@color/black_33"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <ImageView
                            android:id="@+id/iv_id1"
                            android:scaleType="fitXY"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="140dp"
                            android:src="@mipmap/idcard2" />

                        <ImageView
                            android:id="@+id/iv_id2"
                            android:layout_marginLeft="15dp"
                            android:layout_width="0dp"
                            android:layout_height="140dp"
                            android:layout_weight="1"
                            android:src="@mipmap/idcard1" />



                    </LinearLayout>

                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="14dp"
                    android:text="拍摄身份证要求:"
                    android:textSize="14sp"
                    android:textColor="@color/black_33"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:text="大陆公民持有的本人有效二代身份证"
                    android:textSize="10sp"
                    android:textColor="@color/gray_99"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical"
                    >



                    <LinearLayout
                        android:gravity="center_vertical"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <LinearLayout
                            android:paddingRight="5dp"
                            android:paddingLeft="5dp"
                            android:orientation="vertical"
                            android:scaleType="centerCrop"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:layout_height="80dp"
                            >
                            <ImageView
                                android:padding="5dp"
                                android:scaleType="fitXY"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:src="@mipmap/idright" />
                            <TextView
                                android:textSize="14sp"
                                android:textColor="@color/gray_99"
                                android:text="标准"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:scaleType="centerCrop"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:layout_height="80dp"
                            >
                            <ImageView
                                android:paddingBottom="5dp"
                                android:layout_marginTop="-5dp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:src="@mipmap/iderror" />
                            <TextView
                                android:textSize="14sp"
                                android:textColor="@color/gray_99"
                                android:text="边框缺失"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="vertical"
                            android:scaleType="centerCrop"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:layout_height="80dp"
                            >
                            <ImageView
                                android:padding="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:src="@mipmap/idmohu" />
                            <TextView
                                android:textSize="14sp"
                                android:textColor="@color/gray_99"
                                android:text="模糊"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="vertical"
                            android:scaleType="centerCrop"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:layout_height="80dp"
                            >
                            <ImageView
                                android:padding="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:src="@mipmap/idcardyellow" />
                            <TextView
                                android:textSize="14sp"
                                android:textColor="@color/gray_99"
                                android:text="闪光强烈"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>
                <com.coorchice.library.SuperTextView
                    android:id="@+id/tv_submit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="60dp"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="认证"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    app:corner="4dp"
                    app:solid="@color/yellow_65" />
            </LinearLayout>

        </LinearLayout>
    </com.cheyibao.model.ReboundScrollView>

</LinearLayout>