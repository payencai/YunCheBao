<?xml version="1.0" encoding="utf-8"?>
<com.tool.listview.PersonalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scollview"
>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/topPanel"
            layout="@layout/top_title_layout"
            android:visibility="gone"></include>

        <com.youth.banner.Banner
            android:id="@+id/slideshowView"
            android:layout_width="match_parent"
            android:layout_height="210dp"></com.youth.banner.Banner>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white">

            <TextView
                android:id="@+id/tv_dis"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="距离最近"
                android:textColor="@color/black_33" />

            <TextView
                android:id="@+id/tv_score"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="评分最好"
                android:textColor="@color/gray_99" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e2e2e2"></View>

        <com.tool.listview.PersonalListView
            android:id="@+id/lv_study"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </com.tool.listview.PersonalListView>
    </LinearLayout>


</com.tool.listview.PersonalScrollView>